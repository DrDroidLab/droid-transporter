upstream agent {
    server 0.0.0.0:8000;
}

server {

    listen 8080;
    client_max_body_size 100M;

    location / {
        proxy_pass http://agent;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_redirect off;
    }

    location /static/ {
        root /code/;
    }
}

access_log /dev/stdout;

